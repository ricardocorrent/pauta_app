<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.PautaDetalhesActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPautaDetalhesAutor"
            android:textSize="18sp" android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPautaDetalhesDetalhes"
            app:layout_constraintStart_toStartOf="@+id/edtPautaDetalhesDetalhes"
    android:textColor="@color/colorAccent"/>
    <Button
            android:text="Finalizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPautaDetalhesFinalizar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPautaDetalhesAutor"
            app:layout_constraintStart_toStartOf="@+id/tvPautaDetalhesAutor"
            android:background="@drawable/btn_background"
            android:textColor="@android:color/white"
            android:textSize="15sp"
    />
    <Button
            android:text="Reabrir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPautaDetalhesReabrir"
            app:layout_constraintTop_toBottomOf="@+id/tvPautaDetalhesAutor"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/edtPautaDetalhesDetalhes"
            android:background="@drawable/btn_background"
            android:textColor="@android:color/white"
            android:textSize="15sp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtPautaDetalhesDetalhes" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="20sp"
            android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>