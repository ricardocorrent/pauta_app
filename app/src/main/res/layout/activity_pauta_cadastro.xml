<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.PautaCadastroActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edtPautaCadastroTitulo"
            android:inputType="text"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Digite o título"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edtPautaCadastroBreveDescricao"
            app:layout_constraintStart_toStartOf="@+id/edtPautaCadastroTitulo"
            app:layout_constraintEnd_toEndOf="@+id/edtPautaCadastroTitulo"
            android:hint="Breve descrição"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPautaCadastroTitulo"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edtPautaCadastroDetalhes"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPautaCadastroBreveDescricao"
            app:layout_constraintStart_toStartOf="@+id/edtPautaCadastroBreveDescricao" app:layout_constraintEnd_toEndOf="@+id/edtPautaCadastroBreveDescricao"
            android:hint="Detalhes"/>
    <TextView
            android:text="Autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPautaCadastroAutor"
            app:layout_constraintStart_toStartOf="@+id/edtPautaCadastroDetalhes"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPautaCadastroDetalhes"
            />
    <Button
            android:text="Finalizar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPautaCadastroFinalizar"
            app:layout_constraintStart_toStartOf="@+id/tvPautaCadastroAutor"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPautaCadastroAutor"
            app:layout_constraintEnd_toEndOf="@+id/edtPautaCadastroDetalhes"
            android:background="@drawable/btn_background"
            android:textColor="@android:color/white"
            android:clickable="false"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>