<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.UsuarioCadastroActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtUsuarioCadastroNome"
            android:hint="Nome" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edtUsuarioCadastroEmail"
            android:hint="Email" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edtUsuarioCadastroNome"
            app:layout_constraintStart_toStartOf="@+id/edtUsuarioCadastroNome"
            app:layout_constraintEnd_toEndOf="@+id/edtUsuarioCadastroNome"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtUsuarioCadastroSenha" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtUsuarioCadastroEmail"
            app:layout_constraintStart_toStartOf="@+id/edtUsuarioCadastroEmail"
            app:layout_constraintEnd_toEndOf="@+id/edtUsuarioCadastroEmail"
            android:hint="Senha"/>
    <Button
            android:text="Finalizar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCadastroUsuarioFinalizar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtUsuarioCadastroSenha"
            app:layout_constraintStart_toStartOf="@+id/edtUsuarioCadastroSenha"
            app:layout_constraintEnd_toEndOf="@+id/edtUsuarioCadastroSenha"
            android:background="@drawable/btn_background"
            android:textColor="@android:color/white"
            android:textSize="18sp"
    />
</android.support.constraint.ConstraintLayout>