<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.RecuperarSenhaActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edtRecuperarSenhaEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:hint="Email"/>
    <Button
            android:text="Recuperar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecuperarSenhaRecuperar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtRecuperarSenhaEmail"
            app:layout_constraintStart_toStartOf="@+id/edtRecuperarSenhaEmail"
            app:layout_constraintEnd_toEndOf="@+id/edtRecuperarSenhaEmail"
            android:background="@drawable/btn_background"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>